# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=o3-2025-04-16  # Optional: specify different model version

# Reasoning Model Settings (for o3 models)
REASONING_EFFORT=high  # Options: low, medium, high (default: high for legal work)

# Token Limits (o3 model supports up to 100k output tokens)
MAX_COMPLETION_TOKENS=50000
MAX_INPUT_TOKENS=100000

# Service URLs
DOCX_CONVERTER_URL=http://doc-converter:8000  # Internal Docker service name
# For local development without Docker, use:
# DOCX_CONVERTER_URL=http://localhost:8000

# Logging
LOG_LEVEL=INFO

# Optional: Set custom timeouts (in seconds)
API_TIMEOUT=600

# Optional: Set worker configuration for production
WORKERS=2
WORKER_TIMEOUT=600